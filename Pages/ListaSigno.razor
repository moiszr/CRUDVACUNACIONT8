@page "/signo"
@using CRUDVACUNACIONT8.Data
@using Microsoft.EntityFrameworkCore

<PageTitle>Index</PageTitle>


  @if (_personas != null)
{
    foreach (var post in _personas)
    {

        string dt = post.FechaNacimiento.ToString("MM/dd/yyyy");
        DateTime myDateTime = DateTime.Parse(dt);
        int dia = int.Parse(Convert.ToString(myDateTime.Day));
        int mes = int.Parse(Convert.ToString(myDateTime.Month));

        Signo signos = new Signo();

        signos.Id = post.Id;
        signos.Cedula = post.Cedula;
        signos.Nombre = post.Nombre;
        signos.Apellido = post.Apellido;
        signos.Telefono = post.Telefono;
        signos.FechaNacimiento = post.FechaNacimiento;
        signos.VacunasRecibidas = post.VacunasRecibidas;
        signos.Provincias = post.Provincias;
        signos.Fecha = post.Fecha;

          if((dia>=21&&mes==3)||(dia<=20&&mes==4))
                aries.Add(signos);
            if((dia>=24&&mes==9)||(dia<=23&&mes==10))
                libra.Add(signos);
            if((dia>=21&&mes==4)||(dia<=21&&mes==5))
                tauro.Add(signos);
            if((dia>=24&&mes==10)||(dia<=22&&mes==11))
                escorpio.Add(signos);
            if((dia>=22&&mes==5)||(dia<=21&&mes==6))
                geminis.Add(signos);
            if((dia>=23&&mes==11)||(dia<=21&&mes==12))
                sagitario.Add(signos);
            if((dia>=21&&mes==6)||(dia<=23&&mes==7))
                cancer.Add(signos);
            if((dia>=22&&mes==12)||(dia<=20&&mes==1))
                capricornio.Add(signos);
            if((dia>=24&&mes==7)||(dia<=23&&mes==8))
                leo.Add(signos);
            if((dia>=21&&mes==1)||(dia<=19&&mes==2))
                acuario.Add(signos);
            if((dia>=24&&mes==8)||(dia<=23&&mes==9))
                virgo.Add(signos);
            if((dia>=20&&mes==2)||(dia<=20&&mes==3))
                piscis.Add(signos);

    }
}

